<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Confirmation">


    <Button
        android:id="@+id/conf_conf"
        android:layout_width="227dp"
        android:layout_height="69dp"
        android:layout_marginBottom="53dp"
        android:layout_marginEnd="78dp"
        android:layout_marginRight="78dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="222dp"
        android:text="CONFIRM"
        app:layout_constraintBottom_toTopOf="@+id/conf_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_conf" />

    <Button
        android:id="@+id/conf_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="280dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="53dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conf_conf" />

    <TextView
        android:id="@+id/tv_conf"
        android:layout_width="156dp"
        android:layout_height="50dp"
        android:layout_marginEnd="181dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="181dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="116dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>